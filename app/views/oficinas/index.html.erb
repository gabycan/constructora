<p id="notice"><%= notice %></p>

<h1>Oficinas</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Edificio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oficinas.each do |oficina| %>
      <tr>
        <td><%= oficina.number %></td>
        <td><%= oficina.edificio_id_id %></td>
        <td><%= link_to 'Show', oficina %></td>
        <td><%= link_to 'Edit', edit_oficina_path(oficina) %></td>
        <td><%= link_to 'Destroy', oficina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

